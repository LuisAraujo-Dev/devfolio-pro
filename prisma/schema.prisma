// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String @id @default(cuid())
  email    String @unique
  password String 
}

model Project {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String   
  content     String   
  
  githubUrl   String?
  liveUrl     String?
  
  featured    Boolean  @default(false)
  isVisible   Boolean  @default(true)
  order       Int      @default(0)
  
  technologies Technology[] 
  images       ProjectImage[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Technology {
  id        String    @id @default(cuid())
  name      String    
  iconKey   String    
  
  projects  Project[]
  
  certifications Certification[]
}

model ProjectImage {
  id        String   @id @default(cuid())
  url       String
  alt       String?
  
  isCover   Boolean  @default(false)
  type      String   @default("DESKTOP")
  
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Experience {
  id          String    @id @default(cuid())
  company     String
  role        String
  startDate   DateTime
  endDate     DateTime? 
  description String
  isRemote    Boolean   @default(false)
}

model Profile {
  id          String   @id @default(cuid())
  name        String
  headline    String   
  bio         String   
  about       String   
  profileUrl  String?  
  
  githubUrl   String?
  linkedinUrl String?
  email       String?

  updatedAt   DateTime @updatedAt
}

model Certification {
  id            String   @id @default(cuid())
  name          String
  institution   String
  issuedAt      DateTime
  imageUrl      String
  credentialUrl String?
  highlights    String
  
  technologies  Technology[] 

  createdAt     DateTime @default(now())
}